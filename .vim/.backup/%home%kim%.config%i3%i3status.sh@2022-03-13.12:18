#!/bin/sh
# shell script to prepend i3status with more stuff

i3status | while :
do
        read line
        TEMP=$(sensors |grep Package |sed -e 's/(.*)//g' |grep -Eo "+[0-9]{1,2}\.[0-9]{1,2}Â°C")
        DISK=$(dstat --noheaders --nocolor --noupdate -d 1)
        echo "CPU: $TEMP|DISK: $DISK|$line" || exit 1
done
