tztime stockholm {
        format = "%time"
        format_time = "%a v.%V %Y-%m-%d %H:%M:%S"
        timezone = "Europe/Stockholm"
}

load {
        format = "%1min %5min %15min"
        max_threshold = 3
        format_above_threshold = "Warning: %1min %5min %15min"
}

disk "/" {
        #format = "%avail /root"
        format = "%avail Free"
        prefix_type = custom
}
volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: %volume (Muted)"
        device = "default"
}
ipv6 { 
        format_up = "%ip"
        format_down = "v6: n/a"
        #color_good="#AAAAAA"
        color_bad="#AAAAAA"
}
path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
        color_bad="#AAAAAA"
}

