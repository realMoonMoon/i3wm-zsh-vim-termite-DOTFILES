#!/bin/bash
SSHOPT="-e sftp -o PubkeyAuthentication=no -o StrictHostKeyChecking=no -o BatchMode=no -b -"
FILE=""
PATH=""
USR="share-lfp"
HOST="103.69.155.83"
SFTP="/usr/bin/sshpass $SSHOPT $USR'@'$HOST"
export SSHPASS="Lfp!@#"


while [ -n "$1" ]; do # while loop starts
	case "$1" in
	-u) if [[ "$2" =~ '/' ]]; then 
                PATH=${2/*/:${2%/*}}; FILE=${2##*/}; echo "$PATH + $FILE"
            else 
                FILE="${2/*/:$2}"; echo "F = $FILE"
            fi
        ;;
	esac
       shift
done

