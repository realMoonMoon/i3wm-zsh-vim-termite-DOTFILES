#!/bin/bash
# check to see is git command line installed in this machine
IS_GIT_AVAILABLE="$(git --version)"
if [[ $IS_GIT_AVAILABLE == *"version"* ]]; then
  echo "Git is Available"
else
  echo "Git is not installed"
  exit 1
fi
cd $HOME
# Create dirs
mkdir -p i3wm-zsh-vim-termite-DOTFILES/.config/termite
mkdir -p i3wm-zsh-vim-termite-DOTFILES/.config/i3
mkdir -p i3wm-zsh-vim-termite-DOTFILES/.config/i3status
mkdir -p i3wm-zsh-vim-termite-DOTFILES/.ssh
mkdir -p i3wm-zsh-vim-termite-DOTFILES/CERT
mkdir -p i3wm-zsh-vim-termite-DOTFILES/work
mkdir -p i3wm-zsh-vim-termite-DOTFILES/bin
mkdir -p i3wm-zsh-vim-termite-DOTFILES/systemd
mkdir -p i3wm-zsh-vim-termite-DOTFILES/usr/share/conky
# copy dotfiles
# Change what folders you would like to backup (like .bashrc instead of .zshrc)
rm -rf i3wm-zsh-vim-termite-DOTFILES/.oh-my-zsh/.git/objects
cp -r .vimrc .zshrc .zsh_history .Xresources .gitconfig i3wm-zsh-vim-termite-DOTFILES 
cp -r .zsh_custom i3wm-zsh-vim-termite-DOTFILES
cp -r .oh-my-zsh i3wm-zsh-vim-termite-DOTFILES
cp -r .vim i3wm-zsh-vim-termite-DOTFILES
cp -r .ssh i3wm-zsh-vim-termite-DOTFILES
cp -r CERT i3wm-zsh-vim-termite-DOTFILES
cp -r work i3wm-zsh-vim-termite-DOTFILES
cp -r /usr/share/conky i3wm-zsh-vim-termite-DOTFILES/conky
cp .config/termite/config i3wm-zsh-vim-termite-DOTFILES/.config/termite
cp .config/i3/config i3wm-zsh-vim-termite-DOTFILES/.config/i3
cp .config/i3status/config i3wm-zsh-vim-termite-DOTFILES/.config/i3status
cp /usr/bin/i3status.sh i3wm-zsh-vim-termite-DOTFILES/bin
cp /usr/bin/power.sh i3wm-zsh-vim-termite-DOTFILES/bin
cp /usr/bin/startup i3wm-zsh-vim-termite-DOTFILES/bin
cp /etc/systemd/user/power.timer i3wm-zsh-vim-termite-DOTFILES/systemd
cp /etc/systemd/user/power.service i3wm-zsh-vim-termite-DOTFILES/systemd


cd i3wm-zsh-vim-termite-DOTFILES

git pull

# Check git status
gs="$(git status | grep -i "modified")"
echo "${gs}"
# If there is a ncp -r .zshrc .zsh_history .zsh_custom .Xresources .vimrc .vim .config/termite/config .config/i3/config .config/i3/i3status.sh .config/i3status/config .ssh i3wm-zsh-vim-termite-DOTFILES change
if [[ $gs == *"modified"* ]]; then
  echo "push"
fi
# push to Github
#for item in *; do git add $item; done
#for item in .*; do git add $item; done
git add --all
git commit -m "New backup `date +'%Y-%m-%d %H:%M:%S'`";
git push origin main
