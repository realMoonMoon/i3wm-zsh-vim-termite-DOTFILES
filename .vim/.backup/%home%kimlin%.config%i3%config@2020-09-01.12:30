# Swap between networks
#bindsym $mod+Shift+o exec "i3-nagbar -t warning -m 'Swap to home + vpn?' -b 'Yes' 'termite -t vim-float -e sudo netctl switch-to home && sleep 3 && ownitvpn'"
#bindsym $mod+Shift+o exec "i3-nagbar -t warning -m 'Swap to home + vpn?' -b 'Yes' 'termite -t vim-float -e sudo echo hello  && sleep 3 && sudo echo bye'"
set $mode_scrot [1] selection | [2] active window
mode "$mode_scrot" {
    bindsym --release 1 mode "default", exec --no-startup-id scrot -s /home/kimlin/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png
    bindsym --release 2 mode "default", exec --no-startup-id scrot -u -d 4 /home/kimlin/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_scrot"

set $mode_network [1] home | [2] work  | [3] new network | [4] RDP | [8] disconnect wifi | [9] connect vpn | [0] kill vpn
mode "$mode_network" {
    bindsym --release 1 mode "default", exec --no-startup-id termite -t network-float -e "sudo sudo netctl switch-to home"
    bindsym --release 2 mode "default", exec --no-startup-id termite -t network-float -e "sudo netctl switch-to work"
    bindsym --release 3 mode "default", exec --no-startup-id termite -t wifi-menu-float -e "sudo wifi-menu"  
    #bindsym --release 4 mode "default", exec --no-startup-id termite -t network-float -e "xfreerdp /w:1920 /h:1035 /u:kim /v:IPADDRESS -grab-keyboard +fonts +clipboard -themes /monitors:0"
    #bindsym --release 4 mode "default", exec --no-startup-id termite -t network-float -e "xfreerdp /u:kim /v:IPADDRESS -grab-keyboard +fonts +clipboard -themes /monitors:0 /f"
    bindsym --release 8 mode "default", exec --no-startup-id termite -t network-float -e "sudo netctl stop-all"  
    bindsym --release 9 mode "default", exec --no-startup-id termite -t network-float -e "sudo openvpn --cd /etc/openvpn/client --config client.ovpn --log-append log --daemon openvpn"  
    bindsym --release 0 mode "default", exec --no-startup-id termite -t network-float -e "sudo killall openvpn"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+o mode "$mode_network"

set $mode_vms [1] start netdata01-03 | [2] stop netdata01-03 | [3] start
mode "$mode_vms" {
    bindsym --release 1 mode "default", exec --no-startup-id termite -t vmstart-float -e "sh /home/kimlin/work/script/virtualbox/start.sh"
    bindsym --release 2 mode "default", exec --no-startup-id termite -t vmstop-float -e "sh /home/kimlin/work/script/virtualbox/stop.sh"
    bindsym --release 3 mode "default", exec --no-startup-id termite -t vmstop-float -e "bash ~/work/script/start_stop_headset.sh"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+i mode "$mode_vms"


