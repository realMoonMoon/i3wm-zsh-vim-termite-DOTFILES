#!/bin/bash


# check to see is git command line installed in this machine
IS_GIT_AVAILABLE="$(git --version)"
if [[ $IS_GIT_AVAILABLE == *"version"* ]]; then
  echo "Git is Available"
else
  echo "Git is not installed"
  exit 1
fi

cd $HOME

# Create dirs
mkdir -p i3,zsh,vim,termite-DOTFILES/.config/termite
mkdir -p i3,zsh,vim,termite-DOTFILES/.config/i3
mkdir -p i3,zsh,vim,termite-DOTFILES/.config/i3status
mkdir -p i3,zsh,vim,termite-DOTFILES/.ssh
mkdir -p i3,zsh,vim,termite-DOTFILES/CERT
mkdir -p i3,zsh,vim,termite-DOTFILES/work
# copy dotfiles

cp -r .vimrc .zshrc .zsh_history .Xresources .gitconfig i3,zsh,vim,termite-DOTFILES 
cp -r .zsh_custom i3,zsh,vim,termite-DOTFILES
cp -r .vim i3,zsh,vim,termite-DOTFILES
cp -r .ssh i3,zsh,vim,termite-DOTFILES
cp -r CERT i3,zsh,vim,termite-DOTFILES
cp -r work i3,zsh,vim,termite-DOTFILES
cp .config/termite/config i3,zsh,vim,termite-DOTFILES/.config/termite
cp .config/i3/config i3,zsh,vim,termite-DOTFILES/.config/i3
cp .config/i3/i3status.sh i3,zsh,vim,termite-DOTFILES/.config/i3
cp .config/i3status/config i3,zsh,vim,termite-DOTFILES/.config/i3status

rm -f i3,zsh,vim,termite-DOTFILES/.vim/view/*
rm -f i3,zsh,vim,termite-DOTFILES/.vim/.backup/*
rm -rf i3,zsh,vim,termite-DOTFILES/CERT
rm -rf i3,zsh,vim,termite-DOTFILES/work
rm -f i3,zsh,vim,termite-DOTFILES/.ssh/id*
rm -f i3,zsh,vim,termite-DOTFILES/.ssh/bastion-vilja*

cd i3,zsh,vim,termite-DOTFILES

# Check git status
gs="$(git status | grep -i "modified")"
echo "${gs}"

# If there is a ncp -r .zshrc .zsh_history .zsh_custom .Xresources .vimrc .vim .config/termite/config .config/i3/config .config/i3/i3status.sh .config/i3status/config .ssh i3,zsh,vim,termite-DOTFILESew change
if [[ $gs == *"modified"* ]]; then
  echo "push"
fi


# push to Github
for item in *; do git add -u $item; done
for item in .*; do git add -u $item; done
git commit -m "New backup `date +'%Y-%m-%d %H:%M:%S'`";
git push -u origin main
