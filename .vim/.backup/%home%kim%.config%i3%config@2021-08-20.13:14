set $mode_scrot [1] selection | [2] active window
mode "$mode_scrot" {
    bindsym --release 1 mode "default", exec --no-startup-id scrot -s /home/kimlin/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png
    bindsym --release 2 mode "default", exec --no-startup-id scrot -u -d 4 /home/kimlin/Pictures/Screenshots/screenshot-$(date +%Y-%m-%d_%H-%M-%S).png
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
