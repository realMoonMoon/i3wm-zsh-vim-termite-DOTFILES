bindsym $mod+button2 floating toggle
bindsym $mod+Shift+button2 sticky toggle



# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
# set Brightness

bindsym XF86MonBrightnessUp   exec brightnessctl -dintel_backlight -q s +5%
bindsym XF86MonBrightnessDown exec brightnessctl -dintel_backlight -q s 5%-
bindsym Shift+XF86MonBrightnessUp   exec brightnessctl -dintel_backlight -q s 100%
bindsym Shift+XF86MonBrightnessDown exec brightnessctl -dintel_backlight -q s 1%
bindsym XF86Search exec brightnessctl -dintel_backlight -q s 0%

# Set color
bindsym $mod+XF86MonBrightnessUp mode "$mode_redshift"
set $mode_redshift Set colour temperature: r (Reset), a (Auto), 1 (6.5K), 2 (6K), 3 (5.5K), 4 (5K), 5 (4.5K), 6 (4K), 7 (3.5K), 8 (3K), 9 (2.5K), 0 (2K)
set $kill_redshift pkill -9 redshift;
mode "$mode_redshift" {
    bindsym r exec --no-startup-id "$kill_redshift redshift -x", mode "default"
    bindsym a exec --no-startup-id "$kill_redshift redshift -P -t 5000:2500", mode "default"
    bindsym 1 exec --no-startup-id "$kill_redshift redshift -P -O 6500", mode "default"
    bindsym 2 exec --no-startup-id "$kill_redshift redshift -P -O 6000", mode "default"
    bindsym 3 exec --no-startup-id "$kill_redshift redshift -P -O 5500", mode "default"
    bindsym 4 exec --no-startup-id "$kill_redshift redshift -P -O 5000", mode "default"
    bindsym 5 exec --no-startup-id "$kill_redshift redshift -P -O 4500", mode "default"
    bindsym 6 exec --no-startup-id "$kill_redshift redshift -P -O 4000", mode "default"
    bindsym 7 exec --no-startup-id "$kill_redshift redshift -P -O 3500", mode "default"
    bindsym 8 exec --no-startup-id "$kill_redshift redshift -P -O 3000", mode "default"
    bindsym 9 exec --no-startup-id "$kill_redshift redshift -P -O 2500", mode "default"
    bindsym 0 exec --no-startup-id "$kill_redshift redshift -P -O 2000", mode "default"
    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


