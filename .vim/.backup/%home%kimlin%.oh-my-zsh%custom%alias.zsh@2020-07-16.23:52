alias changemac='sudo ip link set dev enp3s0 down &&  sudo ip link set dev enp3s0 address $1 && sudo ip link set dev enp3s0 up'
alias g='zgrep -if $1'
alias 1log='cd /var/log'
alias s='ssh -4t login01.ownit.se ssh $1'
alias s1='ssh -J login01 sw1.450.dr2.a12.sth "dis mac-ad | inc 1/0/12|1/0/14|1/0/16" |sed -e "/^\*/d" -e "/\*\*/d" -e "/^'
alias s2='ssh -J login01 sw5.450.dr2.a2.sth "dis dhcp snooping binding | inc 1/0/12|1/0/14|1/0/16" |sed -e "/^\*/d" -e "/\*\*/d" -e "/^^M/d"'
